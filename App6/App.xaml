<Application
    x:Class="App6.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App6"
    xmlns:toolkit="using:ToolkitPreview"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="Page">
            <Setter Property="toolkit:Implicit.ShowAnimations">
                <Setter.Value>
                    <toolkit:CAnimationCollection>
                        <toolkit:TranslationAnimation Duration="0:0:3" From="0, -1000, 0" To="0"></toolkit:TranslationAnimation>
                    </toolkit:CAnimationCollection>
                </Setter.Value>
            </Setter>
            <Setter Property="toolkit:Implicit.HideAnimations">
                <Setter.Value>
                    <toolkit:CAnimationCollection>
                        <toolkit:TranslationAnimation From="0" To="0, 100, 0"></toolkit:TranslationAnimation>
                    </toolkit:CAnimationCollection>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>

</Application>
